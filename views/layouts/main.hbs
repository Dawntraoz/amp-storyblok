    <body>
        <amp-script layout="container" script="storyBlokDemo">
            {{{body}}}
        </amp-script>
        <script type="text/plain" target="amp-script" id="storyBlokDemo">
            const callStoryBlok = async () => {
                const storyjs = await fetch('https://app.storyblok.com/f/storyblok-latest.js');
                console.log(storyjs);
                var storyblok = await storyjs;

                storyblok.init();

                // On the change event refresh the window
                storyblok.on('change', function() {
                    window.location.reload(true);
                });
            }

            callStoryBlok();
        </script>
    </body>
